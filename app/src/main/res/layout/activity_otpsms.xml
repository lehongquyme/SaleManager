<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".Otpsms">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingHorizontal="100dp"
        android:src="@drawable/aircraft" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:src="@drawable/aircraft">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/boderedt"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="+84"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/black" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:hint="Nhập vào số điện thoại"
                android:inputType="phone"
                android:id="@+id/inputphone"
                android:maxLines="1"
                android:padding="10dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:paddingVertical="10dp"
            android:id="@+id/sendOTP"
            android:text="Gửi sms"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:layout_gravity="start"
            android:text="Điều khoản sử dụng"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/img_rule"
            android:src="@drawable/ic_baseline_arrow_drop_up_24"
            android:background="@android:color/transparent"
            />



    </LinearLayout>
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <TextView
                android:layout_height="120dp"
                android:layout_width="match_parent"
                android:id="@+id/tv_rule"
                android:gravity="center"
                android:visibility="gone"
                android:text="@string/smstext"
                android:layout_marginHorizontal="10dp"
                />
        </ScrollView>
</LinearLayout>

</LinearLayout>