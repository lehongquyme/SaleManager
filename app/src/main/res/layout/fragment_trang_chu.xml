<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerlayout"
    tools:openDrawer="start"
    tools:context=".fragment.FragmentTrangChu">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_main"
        android:id="@+id/nav_menu"
        android:layout_gravity="start"
        >

    </com.google.android.material.navigation.NavigationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F9F4E3"
        >


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:paddingVertical="5dp"
        android:background="#DBD314">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
          android:layout_marginHorizontal="5dp"
            android:background="@drawable/logosaapp" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="50dp"

            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:hint="Tìm kiếm sản phẩm"


            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/menu"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/menu_nav"

           />



    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

    <me.relex.circleindicator.CircleIndicator3

        android:id="@+id/circle_indicator_3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:ci_drawable="@drawable/bg_indicator"
        tools:layout_editor_absoluteY="200dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <GridView
            android:id="@+id/gr_view_hang"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#9E1818"
            android:numColumns="4" />
        <!--        android:background="@color/teal_200"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm bán chạy"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_spBanChay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#0F72CA" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm mới"
        android:textSize="20sp" />


        <GridView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:horizontalSpacing="6dp"
            android:numColumns="2"
            android:verticalSpacing="6dp" />

</LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>