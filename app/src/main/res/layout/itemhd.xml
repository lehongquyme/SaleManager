<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFE8">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/txthd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="9.99"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:textColor="#C53838"
                android:background="@drawable/boderchangepass"
                android:layout_gravity="center"
                android:text="Name HD"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        </LinearLayout>

        <TextView
            android:id="@+id/idHd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="MaÌƒ Hd" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/amongHd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Departure" />

        <TextView
            android:id="@+id/dateHd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="License" />
</LinearLayout>
        <TextView
            android:id="@+id/priceHd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="People" />
        <TextView
            android:id="@+id/totalHd"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:textColor="#4CAF50"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="People" />


    </LinearLayout>

</androidx.cardview.widget.CardView>