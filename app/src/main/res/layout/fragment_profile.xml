<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/linearProfile"
    android:background="#F9F4E3"
    android:orientation="vertical"
    tools:context=".fragment.FragmentProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"

        android:background="@drawable/background"
        android:orientation="vertical"
        android:layout_weight="3">
        <ImageView
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:background="@drawable/boderlogin"
            android:layout_width="wrap_content"
            android:id="@+id/setting"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_settings_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/boderedt"
        android:id="@+id/imginfor"
        android:src="@drawable/ic_baseline_person_24"/>


        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:text="name"
        android:paddingHorizontal="10dp"
        android:background="@drawable/boderedt"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:text="phone"
        android:paddingHorizontal="10dp"
        android:background="@drawable/boderedt"
        android:id="@+id/phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:paddingHorizontal="10dp"
        android:background="@drawable/boderedt"
        android:paddingVertical="2dp"
        android:id="@+id/email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_weight="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thiết Lập Bán Hàng"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/sanphamprofile"
                android:backgroundTint="#FFC107"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Sản Phẩm"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:backgroundTint="#FFC107"
                android:id="@+id/khachhangprofile"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Khách Hàng"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:backgroundTint="#FFC107"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/hoadonprofile"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="Hóa Đơn"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textStyle="bold"
                android:backgroundTint="#FFC107"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:id="@+id/thongtinprofile"
                android:text="Thông Tin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:backgroundTint="#FFC107"
                android:id="@+id/exit"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Thoát"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>